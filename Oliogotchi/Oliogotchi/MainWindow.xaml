<Window x:Class="Oliogotchi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oliogotchi"
        mc:Ignorable="d"
        Title="Oliogotchi - Päävalikko" Height="600" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,50" Width="200" Height="160">
            <Button x:Name="btnJatka" Content="Jatka" Margin="0,0,0,10" Width="200" Height="30" FontFamily="Perpetua Titling MT" FontSize="14" Click="btnJatka_Click"/>
            <Button x:Name="btnUusi" Content="Uusi peli" Margin="0,0,0,10" Width="200" Height="30" FontFamily="Perpetua Titling MT" FontSize="14" Click="btnUusi_Click"/>
            <Button x:Name="btnLopeta" Content="Lopeta" Margin="0,0,0,10" Width="200" Height="30" FontFamily="Perpetua Titling MT" FontSize="14" Click="btnLopeta_Click"/>
            <Button x:Name="btnAsetukset" Content="Asetukset" Margin="0,0,0,10" Width="200" Height="30" FontFamily="Perpetua Titling MT" FontSize="14" Click="btnAsetukset_Click"/>
        </StackPanel>
    </Grid>
</Window>
